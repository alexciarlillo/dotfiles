#!/bin/bash

# Tmux equivalent of gg-code WezTerm script
# Creates a simple nvim session for Guilded coding

# Source the workspace helper
source ~/.dotfiles/universal/.tmux-workspace-helper

# Create workspace (window or session)
WINDOW=$(tmux_create_workspace "guilded-code" "gg-code")
SESSION_NAME="gg-code"  # Used for attach if outside tmux

# Navigate to gg directory and start nvim
tmux send-keys -t $WINDOW 'gg' Enter
tmux send-keys -t $WINDOW 'nvim' Enter

# Attach to session if we're outside tmux
tmux_attach_if_outside "$SESSION_NAME"