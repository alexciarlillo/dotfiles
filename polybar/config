[colors]
background = ${xrdb:background:#282828}
foreground = ${xrdb:foreground:#ebdbb2}
black = ${xrdb:color0:#282828}
dark-gray = ${xrdb:color8:#928374}
dark-red = ${xrdb:color1:#cc241d}
red = ${xrdb:color9:#fb4934}
dark-green = ${xrdb:color2:#98971a}
green = ${xrdb:color10:#b8bb26}
dark-yellow = ${xrdb:color3:#d79921}
yellow = ${xrdb:color11:#fabd2f}
dark-blue = ${xrdb:color4:#458588}
blue = ${xrdb:color12:#83a598}
dark-magenta = ${xrdb:color5:#b16286}
magenta = ${xrdb:color13:#d3869b}
dark-cyan = ${xrdb:color6:#689d6a}
cyan = ${xrdb:color14:#8ec07c}
light-gray = ${xrdb:color7:#a89984}
white = ${xrdb:color15:#ebdbb2}
primary = ${xrdb:color10}
secondary = ${xrdb:color11}
alert = ${xrdb:color1}
background-alt = #4e4e4e
foreground-alt = #4e4e4e

[bar/top]
monitor = ${env:MONITOR:eDP-1}
width = 100%
height = 25
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 4
line-color = ${colors.foreground}

border-left-size = 0
border-right-size = 0
border-top-size = 0
border-bottom-size = 0
border-color = #00ffffff

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = "Source Code Pro for Powerline:size=10;2"
font-1 = "FontAwesome:size=10;2"
font-2 = "Hack:size=18;4"
font-3 = "FontAwesome:size=18;3"

modules-left = i3 xwindow
modules-center = date
modules-right = volume memory cpu wlan eth battery0 battery1 powermenu

tray-position = right
tray-padding = 2
tray-background = ${colors.background}

[module/xwindow]
type = internal/xwindow
label = %title%
label-padding = 2
label-maxlen = 90
label-foreground = ${colors.dark-yellow}
label-background = ${colors.background}

[module/i3]
type = internal/i3
format = <label-state><label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-default = 

label-mode-padding = 1
label-mode-foreground = ${colors.dark-red}
label-mode-background = ${colors.light-gray}

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${colors.background}
label-focused-foreground = ${colors.foreground}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = 1
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.dark-gray}

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${colors.background}
label-visible-foreground = ${colors.foreground}
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-foreground = ${colors.dark-red}
label-urgent-padding = 1

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

[module/date]
type = internal/date
interval = 5

date = " %Y-%m-%d"
date-alt = " %A, %B %-d %Y"

time = %H:%M
time-alt = %l:%M %p

format-prefix = 
format-prefix-foreground = ${colors.foreground}

label = %date% %time%
label-foreground = ${colors.foreground}

[module/volume]
type = internal/volume

format-volume-padding = 0
format-volume-foreground = ${colors.cyan}
format-volume = <label-volume> <bar-volume>
label-volume = "  %percentage%"

format-muted-padding = 0
format-muted = <label-muted>
label-muted = "  "
label-muted-foreground = ${colors.dark-red}

[module/memory]
type = internal/memory
interval = 2
format-prefix = 
format-prefix-foreground = ${colors.cyan}
format-prefix-background = ${colors.background}
label-foreground = ${colors.foreground}
label-background = ${colors.background}
label = %percentage_used%%
label-padding = 1

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = 
format-prefix-foreground = ${colors.cyan}
format-prefix-background = ${colors.background}
label-foreground = ${colors.foreground}
label-background = ${colors.background}
label = %percentage%%
label-padding = 1

[module/wlan]
type = internal/network
interface = wlp4s0
interval = 3.0

format-connected-prefix = 
format-connected-prefix-foreground = ${colors.blue}
format-connected = <label-connected>
format-connected-padding = 0
format-connected-foreground = ${colors.foreground}
format-connected-background = ${colors.background}
label-connected = " %essid% "

format-disconnected-prefix = 
format-disconnected-prefix-foreground = ${colors.dark-red}
format-disconnected-padding = 0
format-disconnected-foreground = ${colors.blue}
format-disconnected-background = ${colors.background}
format-disconnected = <label-disconnected>
label-disconnected = " %ifname% "

[module/battery0]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 99

format-charging-prefix = " "
format-charging-prefix-foreground = ${colors.yellow}
format-charging = " B0:<label-charging> "

format-discharging-prefix = " "
format-discharging-prefix-foreground = ${colors.yellow}
format-discharging = " B0:<label-discharging> "

format-full-prefix = " "
format-full-prefix-foreground = ${colors.yellow}
format-full = " B0:<label-full> "

[module/battery1]
type = internal/battery
battery = BAT1
adapter = AC
full-at = 99

format-charging = " B1:<label-charging>"
format-discharging = " B1:<label-discharging>"
format-full = " B1:<label-full>"

[module/powermenu]
type = custom/menu

label-open = "  "
label-open-foreground = ${colors.dark-red}
label-open-background = ${colors.background}
label-close = "  "
label-close-foreground = ${colors.dark-red}
label-close-background = ${colors.background}
label-separator = |
label-separator-foreground = ${colors.foreground}
label-separator-background = ${colors.background}

menu-0-0 = reboot
menu-0-0-exec = i3-nagbar -t warning -m 'Do you really want to reboot?' -b 'Yes' 'sudo reboot'
menu-0-0-foreground = ${colors.dark-yellow}
menu-0-0-background = ${colors.background}
menu-0-1 = power off
menu-0-1-exec = i3-nagbar -t warning -m 'Do you really want to shutdown?' -b 'Yes' 'sudo poweroff'
menu-0-1-foreground = ${colors.dark-red}
menu-0-1-background = ${colors.background}
menu-0-2 = "logout "
menu-0-2-exec = i3-nagbar -t warning -m 'Do you really want to logout?' -b 'Yes' 'i3-msg exit'
menu-0-2-foreground = ${colors.dark-blue}
menu-0-2-background = ${colors.background}
menu-0-3 = "sleep "
menu-0-3-exec = i3-nagbar -t warning -m 'Do you really want to sleep?' -b 'Yes' 'sudo pm-suspend'
menu-0-3-foreground = ${colors.dark-cyan}
menu-0-3-background = ${colors.background}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0
